<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
    <name>com_newspapers</name>
    <author>Wanderson</author>
    <creationDate>June 2018</creationDate>
    <copyright>((C)2017 SDrummond. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>wanderson@sdrummond.com.br</authorEmail>
    <version>3.0.0</version>
    <description>COM_NEWSPAPERS_XML_DESCRIPTION</description>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>newspapers.php</filename>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
    </files>
    <languages foldes="site">
        <language tag="pt-BR">language/pt-BR.com_newspapers.ini</language>
    </languages>
    <administration>
        <menu img="class:newspapers">com_newspapers</menu>
        <files folder="admin">
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>language</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>newspapers.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>			
        </files>
        <languages foldes="admin">
            <language tag="pt-BR">language/pt-BR.com_newspapers.ini</language>
            <language tag="pt-BR">language/pt-BR.com_newspapers.sys.ini</language>
        </languages>
    </administration>
</extension>


<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="3"
    client="site"
    method="upgrade">
    <name>mod_banner_int_three</name>
    <author>Wanderson Alves</author>
    <creationDate>February 2017</creationDate>
    <copyright>Copyright (C) - 2017 - Sdrummond Soluções em Tecnologia. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>wanderson@sdrummond.com.br</authorEmail>
    <authorUrl>www.sdrummond.com.br</authorUrl>
    <version>1.0.0</version>
    <description>MOD_BANNER_INT_THREE_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_banner_int_three">mod_banner_int_three.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>		
        <filename>mod_banner_int_three.xml</filename>
    </files>
    <languages>
        <language tag="pt-BR">pt-BR.mod_banner_int_three.ini</language>
        <language tag="pt-BR">pt-BR.mod_banner_int_three.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="image"
                       type="media"
                       label="Selecione uma Imagem"
                />
                <field name="image1"
                       type="media"
                       label="Selecione uma Imagem"
                />
                <field name="image2"
                       type="media"
                       label="Selecione uma Imagem"
                />
            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="moduleclass_sfx"
                        type="textarea"
                        rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="owncache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>

#modlistcotas {
    width: 100%;
    display: table;
    position: relative;
    margin: 30px 0;
}

#modlistcotas h2 {
    text-align: center;
    font-size: 20px;
    text-transform: uppercase;
    margin-bottom: 20px;
    font-weight: bold;
}

.list-cotas {
    display: flex;
    flex-flow: row wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    list-style: none;
}

.list-cotas li {
    flex: 1 1 auto;
    position: relative;
    text-align: center;
    max-width: calc(33.33% - 20px);
    margin: 0 10px 20px 10px;
    background-color: #f8f8f8;
}

.list-cotas li div{
    width: calc(100% - 10px);
    display: table;
    padding: 10px 5px 5px 5px;
}

.list-cotas h1{
    font-size: 16px;
    text-transform: uppercase;
}

.list-cotas p{
    font-size: 13px;
    text-transform: lowercase;
    font-weight: 400;
}

.list-cotas p a{
    text-decoration: none;
}
.newspapers {    width: 100%;    margin: 0 auto 60px auto;    display: table;}.newspapers h2 {    font-family: 'source_sans_pro_bo';    color: #58595b;    margin: 0 0 40px 0;    text-align: center;    text-transform: uppercase;    font-size: 36px;}.list-newspapers {    display: flex;    flex-wrap: wrap;}.newspaper {    width: 20%;    margin-bottom: 30px;}.newspaper h1{    font-size: 18px;    text-align: center;    font-weight: 600;    padding: 0 5px;}.newspaper h1 a{    text-decoration: none;}.newspaper-img {    width: calc(100% - 10px);    margin: 0 5px;    display: table;    background-size: cover;    background-position: center;}.newspaper-img a {    width: 100%;    height: 100%;    display: table;    position: relative;    opacity: 0;    background-color: rgba(0,0,0,0.5);    transition: all 300ms;}.newspaper-img a:hover{    opacity: 1;}.newspaper-img a span{    color: #FFF;    position: absolute;    top: 50%;    left: 50%;    transform: translate(-50%, -50%);    font-size: 30px;}
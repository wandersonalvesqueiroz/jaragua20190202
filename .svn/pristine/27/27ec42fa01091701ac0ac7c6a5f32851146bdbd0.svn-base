#banner-int3 {
    width: 100%;
    display: table;
}

#banner-int3 .banner-int3 {
    width: 100%;
    display: table;
    margin: auto;
    position: relative;
    line-height: 0;
}

#banner-int3 .banner-int3 .banner3 {
    width: calc(35% + 5%);
    margin-left: -5%;
    position: relative;
    display: inline-block;
    height: 240px;
    background-position: center;
    background-size: cover;
    -webkit-mask-image: linear-gradient(to right, rgba(0, 0, 0, 1) 90%, rgba(0, 0, 0, 0));
}

#banner-int3 .banner-int3 .banner3:nth-child(1) {
    z-index: 2;
    width: 35%;
    margin-left: 0;
}

#banner-int3 .banner-int3 .banner3:nth-child(2) {
    z-index: 1;
}

#banner-int3 .banner-int3 .banner3:nth-child(3) {
    -webkit-mask-image: none;
    width: calc(30% + 5%);
}

#banner-int3 .banner-int3 .overlay {
    background-color: rgba(0, 0, 0, 0.4);
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    z-index: 3;
}

#banner-int3 .banner-int3 h1 {
    color: #FFF;
    font-size: 46px;
    text-transform: uppercase;
    position: absolute;
    z-index: 4;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-shadow: 0px 0px 15px rgba(0, 0, 0, 1);
    text-align: center;
    font-weight: 200;
}

@media screen and (max-width: 1450px) {
    #banner-int3 .banner-int3 {
        width: 100%;
    }
}

@media screen and (max-width: 1024px) {
    #banner-int3 .banner-int3 h1 {
        font-size: 36px;
        right: 20px;
        bottom: 0;
    }

    #banner-int3 .banner-int3 .banner3 {
        height: 300px;
        width: 55%;
        margin-left: 0;
    }

    #banner-int3 .banner-int3 .banner3:nth-child(3) {
        width: 55%;
        margin-left: -10%;
    }

    #banner-int3 .banner-int3 .banner3:first-child {
        display: none;
    }
}

@media screen and (max-width: 768px) {
    #banner-int3 .banner-int3 h1 {
        font-size: 30px;
        max-width: 90%;
        margin: 0 auto 5px auto;
    }

    #banner-int3 .banner-int3 .banner3 {
        height: 250px;
    }
}

@media screen and (max-width: 600px) {
    #banner-int3 .banner-int3 h1 {
        font-size: 28px;
    }
}

@media screen and (max-width: 480px) {
    #banner-int3 .banner-int3 .banner3 {
        height: 180px;
        width: 100%;
    }

    #banner-int3 .banner-int3 .banner3:nth-child(3) {
        display: none;
    }

    #banner-int3 .banner-int3 h1 {
        font-size: 24px;
    }

    #banner-int3 .banner-int3 .banner3 {
        height: 200px;
        -webkit-mask-image: none;
    }
}
<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="details"
              addfieldpath="/administrator/components/com_clubs/models/fields">

        <field name="id"
               type="text"
               default="0"
               readonly="true"
               class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
        />

        <field name="name"
               type="text"
               class="inputbox"
               size="40"
               label="JGLOBAL_NAME"
               description="JFIELD_NAME_DESC"
               required="true"
        />

        <field name="alias"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_ALIAS_LABEL"
               description="JFIELD_ALIAS_DESC"
        />

        <field name="catid"
               type="category"
               extension="com_clubs"
               label="JCATEGORY"
               class="inputbox"
               required="true"
               addfieldpath="/administrator/component/com_categories/models/fields"
        >
            <option value="">JSELECT</option>

        </field>

        <field name="logo"
               type="media"
               hide_none="1"
               directory="clube_vantagens"
               label="COM_CLUBS_FIELD_LOGO_LABEL"
               description="COM_CLUBS_FIELD_LOGO_DESC"
        />

        <field name="description"
               type="editor"
               label="JGLOBAL_DESCRIPTION"
               class="inputbox"
               required="true"
               filter="JComponentHelper::filterText"
        />

        <field name="discount"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_DISCOUNT_LABEL"
               description="JFIELD_DISCOUNT_DESC"
               required="true"
        />

        <field name="address"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_ADDRESS_LABEL"
               required="true"
        />

        <field name="cnpj"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_CNPJ_LABEL"
               required="true"
        />

        <field name="observation"
               type="editor"
               label="JGLOBAL_OBSERVATION"
               class="inputbox"
               filter="JComponentHelper::filterText"
        />

        <field name="published"
               type="list"
               label="JSTATUS"
               class="inputbox"
               size="1"
               default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="keywords"
               type="textarea"
               rows="8"
               cols="60"
               label="JGLOBAL_KEYWORDS"
               description="COM_CLUBS_FIELD_KEYWORDS_DESC"
               class="inputbox"
        />

    </fieldset>

    <fieldset name="publish">

        <field name="created"
               type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL"
               description="JGLOBAL_FIELD_CREATED_DESC"
               class="inputbox"
               size="22"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
        />

        <field name="created_by"
               type="user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL"
               description="JGLOBAL_FIELD_CREATED_BY_Desc"
        />

        <field name="modified"
               type="calendar"
               class="readonly"
               label="JGLOBAL_FIELD_MODIFIED_LABEL"
               description="COM_WEBLINKS_FIELD_MODIFIED_DESC"
               size="22"
               readonly="true"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
        />

        <field name="modified_by"
               type="user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly"
               readonly="true"
               filter="unset"
        />

        <field name="checked_out"
               type="hidden"
               filter="unset"
        />

        <field name="checked_out_time"
               type="hidden"
               filter="unset"
        />

        <field name="publish_up"
               type="calendar"
               label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
               description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
               class="inputbox"
               format="%Y-%m-%d %H:%M:%S"
               size="22"
               filter="user_utc"
        />

        <field name="publish_down"
               type="calendar"
               label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
               description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
               class="inputbox"
               format="%Y-%m-%d %H:%M:%S"
               size="22"
               filter="user_utc"
        />

    </fieldset>
</form>
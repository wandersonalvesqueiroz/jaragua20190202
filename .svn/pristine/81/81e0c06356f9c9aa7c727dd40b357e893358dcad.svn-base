.joomimg_clr {
    clear: both;
}

.joomimg_row {
    overflow: hidden;
}

.joomimg_row ul {
    padding-left: 0;
    margin-left: 0;
}

.joomimg_row ul li {
    list-style: none;
    background: none;
}

.box-img > a {
    width: calc(100% - 4px);
    display: table;
    margin: 2px;
    background-size: cover;
    background-position: center;
    background-color: #1e4323;
    text-decoration: none;
}

.box-img > a:hover{
    text-decoration: none;
    background-color: #0c2910;
}

.box-img > a span{
    vertical-align: middle;
    display: table-cell;
    color: #FFF;
}

.box-img > a span small{
    display: table;
    margin: auto;
    width: 75px;
    font-style: italic;
}

.joomimg-module h1{
    margin-bottom: 30px;
}
.joomimg-module h1 a{
    text-decoration: none;
    font-weight: 200;
    font-size: 30px;
    color: #FFF;
}
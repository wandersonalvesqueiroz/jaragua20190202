<metadata>
	<layout title="COM_LAST_LAST_VIEW_DEFAULT_TITLE">
		<message>COM_LAST_LAST_VIEW_DEFAULT_DESC</message>
	</layout>
	<fields name="request">
		<fieldset name="request"
				  addfieldpath="/administrator/components/com_last/models/fields">

			<field name="category"
				   type="category"
				   extension="com_content"
				   label="Categoria"
			/>

			<field name="quantidade"
				   type="number"
				   default="0"
				   label="Quantidade"
				   min="0"
				   max="10"
				   step="2"
			/>

			<field name="link_text"
				   type="text"
				   label="Texto do Link"
			/>

		</fieldset>
	</fields>
</metadata>


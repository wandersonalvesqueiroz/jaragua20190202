    </languages>
    <administration>
        <menu img="../media/com_last/images/menu/last.png">com_last</menu>
        <submenu>
            <menu link="option=com_last&amp;view=last" view="last" img="../media/com_last/images/menu/last.png" alt="Last/Last">com_last_last</menu>
